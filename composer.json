{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "zlatanstajic/todo-api",
    "type": "project",
    "description": "A simple Todo API built with Laravel 12.",
    "keywords": ["laravel", "framework", "sanctum", "example", "todo", "api"],
    "license": "MIT",
    "authors": [
        {
            "name": "Zlatan Stajic",
            "email": "contact@zlatanstajic.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0",
        "laravel/sanctum": "^4.0",
        "laravel/tinker": "^2.10.1"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^4.0",
        "barryvdh/laravel-ide-helper": "^3.6",
        "dedoc/scramble": "^0.13.5",
        "driftingly/rector-laravel": "^2.1",
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "3.2.*",
        "laravel/boost": "^1.8",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "peckphp/peck": "^0.2.0",
        "phpunit/phpunit": "^11.5.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-install-cmd": [
            "cp .extras/git/pre-commit .git/hooks/pre-commit || true",
            "@php artisan optimize"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php artisan migrate --graceful --ansi"
        ],
        "setup": [
            "composer install",
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php -r \"file_exists('./database/database.sqlite') || touch('./database/database.sqlite');\"",
            "@php artisan key:generate",
            "@php artisan migrate:fresh --seed --force",
            "@artisan:ide-helper",
            "npm install",
            "@test"
        ],
        "serve": [
            "@artisan:clear",
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" --names=server,queue,logs"
        ],
        "test": [
            "@artisan:clear",
            "@test:rector",
            "@test:peck",
            "@test:pint",
            "@test:phpstan",
            "@test:phpunit"
        ],
        "test:rector": "./vendor/bin/rector process --dry-run",
        "test:peck": "vendor/bin/peck",
        "test:pint": "./vendor/bin/pint --parallel --test",
        "test:phpstan": "vendor/bin/phpstan analyse",
        "test:phpunit": "php artisan test --coverage --min=100",
        "fix": [
            "@fix:rector",
            "@fix:pint"
        ],
        "fix:pint": "./vendor/bin/pint --parallel",
        "fix:rector": "./vendor/bin/rector process",
        "artisan:clear": [
            "@php artisan route:clear --ansi",
            "@php artisan cache:clear --ansi",
            "@php artisan config:clear --ansi"
        ],
        "artisan:ide-helper": [
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:models -N",
            "@php artisan ide-helper:meta"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
